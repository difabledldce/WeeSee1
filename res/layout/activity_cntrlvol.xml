<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Cntrlvol">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:weightSum="2">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weseelg"></ImageView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="19dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:fontFamily="@font/proxima"
            android:textColor="@color/pink"
            android:text="We See"/>
    </LinearLayout>
    <TextView
        android:id="@+id/loginscrnvol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Verify Yourself !"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/proxima"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/proxima"
        android:textSize="18sp"
        android:text="Enter the code that was sent to"/>
    <TextView
        android:id="@+id/phonenumberTextVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+918372890302"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/proxima"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logmob">

        <EditText
            android:id="@+id/verificationEditTextVolunteer"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_height="45dp"
            android:layout_gravity="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/proxima"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:text="Tap Continue to accept our Terms,Data Policy, cookie use and the Privacy Policy and Terms of Service."
        android:textAlignment="center"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/cntrlcondvol"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/buttonstlepink"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"/>

    <ProgressBar
        android:id="@+id/progressBarVol"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>





