<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="30dp"
        android:id="@+id/bckfrmvollog"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        android:layout_marginTop="20dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/loginscrn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Sign In"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/proxima"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/txtPwdvollog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:hint="Mobile Number"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/proxima"
        android:inputType="number"
        android:maxLength="10"
        android:ems="10" />
    <Button
        android:id="@+id/btnLoginvol"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonstlepink"
        android:text="Submit" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="@font/proxima"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"

        android:text="Tap Next to verify your account with your phone number.You don't need to manually enter the verification code if the number is installed in this phone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/proxima"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:text="Not yet Registered?"/>
    <ImageView
        android:id="@+id/vollogreg"
        android:layout_marginTop="5dp"
        android:layout_width="190dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"/>

</LinearLayout>